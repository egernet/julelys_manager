{
  "name": "julelys-manager",
  "version": "1.0.0",
  "description": "MCP server for controlling LED sequences in Julelys",
  "functions": [
    {
      "name": "list_sequences",
      "description": "List all available LED sequences",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "add_sequence",
      "description": "Add a new LED sequence to the system",
      "parameters": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "Sequence name" }
        },
        "required": ["name"]
      }
    },
    {
      "name": "run_sequence",
      "description": "Run a specific LED sequence",
      "parameters": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "Sequence name" }
        },
        "required": ["name"]
      }
    }
  ],
  "server": {
    "type": "tcp",
    "port": 8080,
    "host": "0.0.0.0"
  }
}
